{
  "name": "@mxenabled/react-native-widget-sdk",
  "description": "MX React Native Widget SDK",
  "version": "1.0.1",
  "main": "dist/src/index.js",
  "source": "src/index.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mxenabled/react-native-widget-sdk.git"
  },
  "scripts": {
    "prepack": "npm run build:dist",
    "build": "tsc",
    "build:dist": "[ -d dist ] && rm -r dist; npm run build -- --declaration --noEmit false --outDir dist",
    "lint": "eslint src test",
    "test": "jest",
    "test:coverage": "npm test -- --verbose --coverage",
    "open:coverage": "open coverage/lcov-report/index.html",
    "ci:install": "npm ci --cache .npm --prefer-offline",
    "generate:post_messages": "ts-node src/post_messages/generate_main.ts",
    "generate": "npm run generate:post_messages"
  },
  "bin": {
    "mx-widget-sdk-setup": "dist/src/cli/setup.js"
  },
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-native": "0.64.3",
    "react-native-base64": "^0.2.1",
    "react-native-config": "^1.4.5",
    "react-native-web": "0.17.1",
    "react-native-webview": "11.15.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/react-native": "^9.0.0",
    "@types/jest": "^27.4.0",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "^17.0.38",
    "@types/react-native": "^0.66.15",
    "@types/react-native-base64": "^0.2.0",
    "@types/react-test-renderer": "^17.0.1",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.9.0",
    "jest": "^27.5.0",
    "msw": "^0.36.8",
    "node-fetch": "^2.6.7",
    "react-test-renderer": "^17.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "uri-scheme": "^1.0.112",
    "yaml": "^1.10.2"
  },
  "jest": {
    "preset": "react-native",
    "collectCoverageFrom": [
      "src/**/**"
    ],
    "setupFiles": [
      "./test/setup.ts"
    ],
    "setupFilesAfterEnv": [
      "./test/mocks/setup.ts"
    ],
    "testRegex": [
      "_test\\.[jt]sx?$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/dist",
      "<rootDir>/build",
      "<rootDir>/example"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|(?!deck.gl)|ng-dynamic)"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  }
}
